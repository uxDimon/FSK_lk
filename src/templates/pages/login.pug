extends ../template

block variables
    - var title = 'Войти'

block content
    main
        .login-wrap 
            .login
                svg(width="223", height="50").login__main-logo
                    use(xlink:href="./assets/images/sprite.svg#main-logo")
                .login-form
                    h3.login-form__h Вход в личный кабинет
                    
                    lable.input.input_tel-country
                        //- .input__name Телефон 
                        .tel-country__wrap
                            input(type="tel", name="login-form", placeholder="Александр").input__input
                            .tel-country
                                button(data-country="rus").tel-country__select
                                    svg(width="10", height="5").tel-country__select-arrow
                                        use(xlink:href="./assets/images/sprite.svg#icon-arrow")
                                    img(src="./assets/images/flag/flag-rus.svg", alt="Россия").tel-country__img
                                .tel-country__optipn-wrap 
                                    label.tel-country__option
                                        input(type="radio", name="tel-country", value="rus").tel-country__option-input
                                        img(src="./assets/images/flag/flag-rus.svg", alt="Россия").tel-country__option-img
                                    label.tel-country__option
                                        input(type="radio", name="tel-country", value="aze").tel-country__option-input
                                        img(src="./assets/images/flag/flag-aze.svg", alt="Азербайджан").tel-country__option-img
                        .input__error Фамилия указана неверно
                    
                    lable.input.error
                        .input__name Фамилия
                        input(type="text", name="login-form", placeholder="Александр").input__input
                        .input__error Фамилия указана неверно
                    
                    .login-form__bottom-wrap
                        button.login-form__bottom-resend Отправить повторно
                        button(type="submit").button Войти