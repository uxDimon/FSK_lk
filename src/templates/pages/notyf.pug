                            .tel-country__wrap
                                input(type="tel", name="login-form").input__input
                                .tel-country
                                    button(data-country="rus").tel-country__select
                                        svg(width="10", height="5").tel-country__select-arrow
                                            use(xlink:href="./assets/images/sprite.svg#icon-arrow")
                                        img(src="./assets/images/flag/flag-rus.svg", alt="Россия").tel-country__img
                                    .tel-country__optipn-wrap 
                                        label.tel-country__option
                                            input(type="radio", name="tel-country", value="rus").tel-country__option-input
